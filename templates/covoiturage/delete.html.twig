{% extends 'base.html.twig' %}

{% block body %}

    <div class="alert alert-danger">
        <strong>Avertissement !</strong> Vous êtes en train de supprimer le covoiturage suivant :
        <ul>

            <li><strong>Description : </strong>{{ covoiturage.description }}</li>
            <li><strong>Nombre de place : </strong>{{ covoiturage.nbplace }}</li>
            <li><strong>Prix : </strong>{{ covoiturage.prix }}</li>
            <li><strong>Date de publication : </strong>{{ covoiturage.dateCreation|date('d/m/Y') }}</li>
        </ul>
    </div>
    <div class="collapse navbar-collapse">
    {{ form_start(form, {'attr': {'class': 'navbar-form navbar-left'}}) }}
    {{ form_widget(form) }}
        <a href="{{ path('covoiturage.list') }}" class="btn btn-success" role="button"><span class="glyphicon glyphicon-off" aria-hidden="true"></span>Annuler</a>
        <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes vous sûr ??')">
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        Supprimer
    </button>
    {{ form_end(form) }}
    </div>
{% endblock %}