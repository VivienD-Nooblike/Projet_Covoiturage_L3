{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'covoiturage.detail'|trans }}<i>{{ covoiturage.trajet.itineraire }}</i></h1>
    <div class="media" style="margin-top: 60px;">
        <div class="media-body">
            <div class="row">
                <div class="col-sm-10">
                    <h3 class="media-heading"><strong>{{ covoiturage.datedepart|date('D.d F') }}</strong></h3>
                </div>

                <div class="col-sm-2">
                    <i class="pull-right">{{ 'covoiturage.publie'|trans }}{{ covoiturage.dateCreation|date('d/m/Y') }}</i>
                </div>
            </div>
            <br>
            <p><strong>{{ 'covoiturage.depart'|trans }}</strong> {{ covoiturage.datedepart|date('h:i')  }} :  {{ covoiturage.trajet.depart }} </p>
            <p><i>{{ 'covoiturage.adresse'|trans }}{{ covoiturage.trajet.adressedepart }}</i></p>
                <br>
            <p><strong>{{ 'covoiturage.arrivee'|trans }}</strong> {{ covoiturage.datearrivee|date('h:i') }} : {{ covoiturage.trajet.destination }}</p>
            <p><i>{{ 'covoiturage.adresse'|trans }}{{ covoiturage.trajet.adressearrivee }}</i></p>
            <br>
            <p>{{ 'covoiturage.temps'|trans }}{{ covoiturage.trajet.tempstrajet }}</p>
            <br>
            <p><strong>{{ 'covoiturage.descrip'|trans }}</strong> {{ covoiturage.description|nl2br }}</p>
            <p>{{ 'covoiturage.nbplace'|trans }}<strong>{{covoiturage.nbplace }}</strong></p>
            <p>{{ 'covoiturage.prix'|trans }}<strong>{{ covoiturage.prix }}â‚¬</strong></p>
            <p>
                {{ 'covoiturage.passager'|trans }} {% for passager in covoiturage.passager %}
                    <strong>{{ passager }}</strong>
                {% endfor %}
            </p>
            <p><strong>{{ 'covoiturage.expiration'|trans }}</strong> {{ covoiturage.dateExpiration|date('d/m/Y') }}</p>
            <br>
            <p>
                <strong>{{ 'conducteur.titre'|trans }} <strong>
                <table class="table">
                <thead>
                <tr>
                    <th>{{ 'conducteur.nom'|trans }}</th>
                    <th>{{ 'conducteur.prenom'|trans }}</th>
                    <th>Email</th>
                    <th>{{ 'conducteur.tel'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for conducteur in covoiturage.conducteur %}
                    <tr>
                        <td><a href="#">{{ conducteur.nom }}</a></td>
                        <td>{{ conducteur.prenom }}</td>
                        <td>{{ conducteur.email }}</td>
                        <td>{{ conducteur.telephone }}</td>
                    </tr>
                {% endfor %}
                </tbody>
                </table>
            </p>
            <div class="row">
                <div class="col-sm-12 text-right">
                    <a class="btn btn-default" href="{{ path('covoiturage.list') }}">
                        <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
                        {{ 'covoiturage.liste'|trans }}
                    </a>

                    <a class="btn btn-primary" href="#">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        {{ 'covoiturage.editer'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}