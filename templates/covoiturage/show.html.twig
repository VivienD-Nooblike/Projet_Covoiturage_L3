{% extends 'base.html.twig' %}

{% block body %}
    <h1>Détails du covoiturage <i>{{ covoiturage.trajet.itineraire }}</i></h1>
    <div class="media" style="margin-top: 60px;">
        <div class="media-body">
            <div class="row">
                <div class="col-sm-10">
                    <h3 class="media-heading"><strong>{{ covoiturage.datedepart|date('D.d F') }}</strong></h3>
                </div>

                <div class="col-sm-2">
                    <i class="pull-right">Publié le {{ covoiturage.dateCreation|date('d/m/Y') }}</i>
                </div>
            </div>
            <br>
            <p><strong>Départ :</strong> {{ covoiturage.datedepart|date('h:i')  }} :  {{ covoiturage.trajet.depart }} </p>
            <p><i> Adresse : {{ covoiturage.trajet.adressedepart }}</i></p>
                <br>
            <p><strong>Arrivée à : </strong> {{ covoiturage.datearrivee|date('h:i') }} : {{ covoiturage.trajet.destination }}</p>
            <p><i> Adresse : {{ covoiturage.trajet.adressearrivee }}</i></p>
            <br>
            <p>Temps de trajet : {{ covoiturage.trajet.tempstrajet }}</p>
            <br>
            <p><strong>Description :</strong> {{ covoiturage.description|nl2br }}</p>
            <p>Nombre de place restantes : <strong>{{covoiturage.nbplace }}</strong></p>
            <p>Prix total pour une place : <strong>{{ covoiturage.prix }}€</strong></p>
            <p>
                Passsager : {% for passager in covoiturage.passager %}
                    <strong>{{ passager }}</strong>
                {% endfor %}
            </p>
            <p><strong>Date d'expiration :</strong> {{ covoiturage.dateExpiration|date('d/m/Y') }}</p>
            <br>
            <p>
                <strong>Le conducteur : <strong>
                <table class="table">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                </tr>
                </thead>
                <tbody>
                {% for conducteur in covoiturage.conducteur %}
                    <tr>
                        <td><a href="#">{{ conducteur.nom }}</a></td>
                        <td>{{ conducteur.prenom }}</td>
                        <td>{{ conducteur.email }}</td>
                        <td>{{ conducteur.telephone }}</td>
                    </tr>
                {% endfor %}
                </tbody>
                </table>
            </p>
            <div class="row">
                <div class="col-sm-12 text-right">
                    <a class="btn btn-default" href="{{ path('covoiturage.list') }}">
                        <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
                        Liste des covoiturages
                    </a>

                    <a class="btn btn-primary" href="#">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Éditer
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}